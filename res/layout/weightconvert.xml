<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Weight"
                android:inputType="numberDecimal"
                android:id="@+id/weightedit"
                android:textSize="36sp"
                android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>


        <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GO!"
                android:id="@+id/gobutton"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/selector" android:layout_centerHorizontal="true"/>
        <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/selector"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/tableRow4" android:layout_alignParentStart="true">

            <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kg to lbs"
                        android:id="@+id/kgtolbs"
                        android:checked="true"
                        android:layout_marginStart="48dp"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="lbs to Kg"
                     android:id="@+id/lbstokg"
                     android:checked="false"
                    android:layout_marginStart="95dp"
                    />


        </RadioGroup>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="30dp" android:layout_below="@+id/weightedit"
                android:layout_centerHorizontal="true" android:id="@+id/tableRow4">
        </TableRow>


    </RelativeLayout>
</LinearLayout>
